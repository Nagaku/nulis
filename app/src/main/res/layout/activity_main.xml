<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/drawable_activity_main">

    <LinearLayout
        android:id="@+id/main_ll_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_above="@id/main_bnv_1"
        android:layout_below="@id/main_ll_1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bnv_1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wooden_cartoon"
        app:menu="@menu/menu_bottom_nav_main"/>

</RelativeLayout>