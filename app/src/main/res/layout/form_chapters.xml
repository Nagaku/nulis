<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/drawable_activity_main"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>


    <EditText
        android:id="@+id/form_chapter_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cream"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/cokelat_gelap"
        android:hint="Chapter Title"
        android:textColorHint="@color/text_terang"
        android:paddingLeft="10dp"

        />

    <LinearLayout
        android:layout_below="@id/form_chapter_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/form_chapter_tambah"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/drawable_tambah"
            />

        <Button
            android:id="@+id/form_chapter_batal"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/drawable_batal"
            />

    </LinearLayout>

</RelativeLayout>