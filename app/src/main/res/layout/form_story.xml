<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/drawable_activity_main"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/form_story_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:textSize="24dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:textColor="@color/cream"/>

    <EditText
        android:id="@+id/form_story_title"
        android:layout_below="@id/form_story_option"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cream"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/cokelat_gelap"
        android:hint="Story Title"
        android:textColorHint="@color/text_terang"
        android:paddingLeft="10dp"

        />

    <LinearLayout
        android:layout_below="@id/form_story_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/form_story_tambah"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/drawable_ok"
            />

        <Button
            android:id="@+id/form_story_batal"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/drawable_batal"
            />

    </LinearLayout>

</RelativeLayout>